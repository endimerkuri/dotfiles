* {
  background-color: rgba(0,0,0,0);
  // font: "UbuntuMono Nerd Font 48";
}

window {
  transparency: "real";
  fullscreen: false;
}

mainbox {
  children: [ inputbar, listview ];
  background-color: @bg;
  // border-radius: 12;
  // border: 1;
  border-color: #ffffff0A;
}

listview {
  columns: 3;
  padding: 8;
  spacing: 0;
}

element {
  border: 1;
  text-color: @item;
  orientation: vertical;
  padding: 8 12 8 12;
  border-radius: 6;
}

element selected {
  background-color: @ac;
  border-color: #ffffff0A;
  text-color: @ac-txt;
  transition: 20;
}

element-icon {
  size: 60;
  horizontal-align: 0.5;
  vertical-align: 0.5;
}

element-text {
  font: "UbuntuMono Nerd Font 12";
  horizontal-align: 0.5;
  vertical-align: 0.5;
}

inputbar {
  children: [entry];
  padding: 4 8 4 8;
  background-color: @bg;
  border: 0 0 1 0;
  border-color: #ffffff0A;
}

prompt {
  enabled: false;
}

entry {
  text-color: @txt;
  padding: 8 12 8 12;
}
