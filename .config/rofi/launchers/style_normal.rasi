configuration {
	modi: "drun";
    drun-display-format: "{icon} {name}";
	show-icons: true;
	icon-theme: "Ambiant-MATE";
	location: 1;
	xoffset: 0;
	yoffset: 25; // polybar height
	fake-transparency: false;
	hide-scrollbar: true;
	bw: 0;
    fullscreen: false;
	lines: 10;
    show-icons: true;
	terminal: "st";
	sidebar-mode: false;
}

// black version
* {
  // bg: #000000;
  bg: #222;
  ac: #868fa176;
  ac-txt: #869fa2;
  item: #bdc3c3;
  txt: #d1d5da;
}

